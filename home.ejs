    <table>
      <thead>
          <tr >
              <th>#</th>
              <th>Name</th>
              <th>Last Trade Price</th>
              <th>Buy/Sell</th>
              <th>Differene</th>
              <th>Base Unit</th>
              <th>Volume</th>
            
          </tr>
      </thead>
      <tbody><% data.forEach((ticker, index) => { %>
          <tr >
              <td><%= index + 1 %></td>
              <td><%= ticker.name %></td>
              <td><%= ticker.sell %></td>
              <td><%= ticker.buy %>/<%= ticker.sell %></td>
              <% 
                  
                  const percentageDifference = ((ticker.buy - ticker.sell) / ticker.sell) * 100;
              
                  const roundedPercentageDifference = percentageDifference.toFixed(3);
      
                  // Apply different styles based on the sign of the percentage difference
                  const color = percentageDifference > 0 ? 'green' : 'red';
              %>
              <td style="color:red" <%= color %>"><%= roundedPercentageDifference %></td>

              <td><%= ticker.base_unit %></td>
              <td><%= ticker.volume %></td>

          </tr>
      <% }); %>
      
      </tbody>
  </table>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script>
        // Telegram button click event
        document.getElementById('telegramBtn').addEventListener('click', function() {
            // Replace the URL with the actual Telegram channel URL
            window.open('https://t.me/yourchannel', '_blank');
        });

        // Theme toggle
        document.getElementById('themeToggle').addEventListener('change', function() {
            if (this.checked) {
                // Dark mode
                document.body.classList.add('bg-dark');
                document.body.classList.add('text-white');
            } else {
                // Light mode
                document.body.classList.remove('bg-dark');
                document.body.classList.remove('text-white');
            }
        });

        // Timer
        function updateTimer() {
            var now = new Date();
            var seconds = now.getSeconds();
            var progress = seconds / 60; 

            document.querySelector('.CircularProgressbar-path').style.strokeDasharray = (283 * progress) + ' 283';
            document.querySelector('.CircularProgressbar-path').style.strokeDashoffset = (283 - (283 * progress));
            document.querySelector('.CircularProgressbar-text').textContent = seconds;
        }

        
        setInterval(updateTimer, 1000);

        
        updateTimer();
    </script>
